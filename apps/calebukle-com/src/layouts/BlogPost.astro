---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Tags from '../components/Tags.astro';
import Back from '../components/Back.astro';
import { GITHUB_BASE_PAGE_URL, normalizePost, normalizePosts } from '../config';
export interface Props {
	content: {
		title: string;
		description: string;
		publish_date: string;
		updated_date?: string;
		img?: string;
		tags?: string[];
	};
}

const { content: rawContent } = Astro.props;
const content = normalizePost(rawContent);
const editUrl = `${GITHUB_BASE_PAGE_URL}/${Astro.url.pathname}.md`;
---

<!DOCTYPE html>
<html lang="en-us" class="dark">
	<head>
		<BaseHead title={content.title} description={content.description} />
	</head>

	<body class="bg-slate-900 text-slate-100 max-w-screen-sm px-6 pt-8 mx-auto">
		<nav class="pb-16">
			<Back />
		</nav>
		<main>
			<article class="flex gap-1 flex-col">
				<h1 class="text-2xl">{content.title}</h1>
				{content.tags && <Tags tags={content.tags} />}
				{
					content.formatted_publish_date && (
						<time>{content.formatted_publish_date}</time>
					)
				}
				{
					content.formatted_updated_date && (
						<div>
							Last updated on <time>{content.formatted_updated_date}</time>
						</div>
					)
				}
				<hr />
				<slot />
			</article>
		</main>
		<Footer editUrl={editUrl} />
	</body>
</html>
